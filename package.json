{
  "name": "@zano-project/react-native-zano",
  "version": "0.1.3",
  "description": "Zano Wallet Library for react-native",
  "source": "./src/index.ts",
  "types": "./lib/typescript/src/index.d.ts",
  "main": "./lib/module/index.js",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./utils": {
      "source": "./src/utils/index.ts",
      "types": "./lib/typescript/src/utils/index.d.ts",
      "default": "./lib/module/utils/index.js"
    },
    "./controller": {
      "source": "./src/controller.ts",
      "types": "./lib/typescript/src/controller.d.ts",
      "default": "./lib/module/controller.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "ios",
    "!ios/build",
    "cpp",
    "nitrogen",
    "nitro.json",
    "*.podspec",
    "react-native.config.js",
    "!libraries/Zano/**/*",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @zano-project/react-native-zano-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "prepare:codegen": "yarn nitrogen && yarn shared-codegen",
    "nitrogen": "nitro-codegen",
    "shared-codegen": "mkdir nitrogen/codegen/ && cp ./cpp/*CodeGen.hpp nitrogen/codegen/",
    "release": "release-it --only-version",
    "pack:prebuild": "node ./scripts/pack_prebuilds.js",
    "publish:ios": "yarn pack:prebuild ios && npm publish ./package.ios.tgz",
    "publish:andoid": "yarn pack:prebuild android && npm publish ./package.android.tgz",
    "publish:self": "yarn pack && npm publish ./package.tgz",
    "publish:all": "yarn publish:ios && yarn publish:android && yarn publish:self"
  },
  "keywords": [
    "react-native",
    "zano",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyle-team/react-native-zano.git"
  },
  "author": "Mikhailov Anton <anion155@gmail.com> (https://github.com/anion155)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyle-team/react-native-zano/issues"
  },
  "homepage": "https://github.com/hyle-team/react-native-zano#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nitro-codegen": "^0.25.2",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.8",
    "react-native-nitro-modules": "^0.29.6",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "^0.29.6"
  },
  "optionalDependencies": {
    "@zano-project/react-native-zano-android-prebuild": "0.1.0",
    "@zano-project/react-native-zano-ios-prebuild": "0.1.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.9.2",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "custom",
        {
          "script": "prepare:codegen",
          "clean": "nitrogen/"
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "kotlin-swift",
    "type": "nitro-module",
    "version": "0.51.1"
  }
}
